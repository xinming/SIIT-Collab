- form_for @share, :url => shares_path(:type => params[:type], :group => @group) do |f|
  %p
    =f.error_messages
  %p
    = f.label :Title, "Title"
    = f.text_field :title, :class => "text-input"
  %p
    = f.label :Description, "Description"
    = f.text_area :description, :size => "20x5", :class => "text-area"
  %p
    = f.label :url, "YouTube URL"
    = f.text_field :url, :class => "text-input"
  %p
    = f.submit "Share", :disable_with => 'Sharing...', :class => "submit-button"
    or
    = link_to "Cancel", :back